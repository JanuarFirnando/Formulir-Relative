<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".ResultActivity">

    <TextView
        android:id="@+id/tv_judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ANDA TERDAFTAR"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textColor="@color/black"
        />
    <TableLayout
        android:id="@+id/tl_formulir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_judul"
        android:layout_marginTop="60dp"
        >
        <TableRow android:padding="6dp">
            <TextView
                android:text="NPM"
                android:textColor="@color/black"/>

            <TextView
                android:text=":"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_npm"
                android:text="Isi NPM"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                />

        </TableRow>

        <TableRow android:padding="6dp">
            <TextView
                android:text="NAMA MAHASISWA"
                android:textColor="@color/black"/>
            <TextView
                android:text=":"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_nama"
                android:text="IsI Nama Mahasiswa"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                />

        </TableRow>

        <TableRow android:padding="6dp">
            <TextView
                android:text="JENIS KELAMIN"
                android:textColor="@color/black"/>
            <TextView
                android:text=":"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_jk"
                android:text="Isi Jenis Kelamin"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                />

        </TableRow>

        <TableRow android:padding="6dp">
            <TextView
                android:text="PROGRAM STUDI"
                android:textColor="@color/black"/>
            <TextView
                android:text=":"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_prodi"
                android:text="Isi Program Studi"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                />

        </TableRow>




    </TableLayout>



</RelativeLayout>